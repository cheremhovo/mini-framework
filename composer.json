{
    "name": "cheremhovo1990/framework",
    "description": "Mini Framework",
    "type": "library",
    "scripts": {
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "export XDEBUG_MODE=debug,develop && export XDEBUG_TRIGGER=yes && php -S 0.0.0.0:8080 -t framework/public"
        ],
        "tests": "export XDEBUG_MODE=debug && export XDEBUG_TRIGGER=yes && php vendor/bin/phpunit"
    },
    "require": {
        "php": ">=8.4",
        "psr/container": "2.*",
        "psr/http-message": "2.*",
        "psr/http-server-middleware": "1.0.*",
        "psr/http-server-handler": "1.0.*",
        "laminas/laminas-diactoros": "^3.6.0",
        "laminas/laminas-httphandlerrunner": "^2.12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "framework/src/",
            "Cheremhovo1990\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "authors": [
        {
            "name": "Kozhukhov Ivan",
            "email": "cheremhovo1990@yandex.ru"
        }
    ],
    "license": "MIT"
}
